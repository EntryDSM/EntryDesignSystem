{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "es2017"],
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "outDir": "build",
        "baseUrl": "./src",
        "declaration": true
    },
    "include": ["./src/**/*"],
    "exclude": ["build", "src/stories/*", "node_modules", "**/node_modules"]
}
