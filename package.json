{
    "name": "@team-entry/design_system",
    "version": "0.1.0",
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "scripts": {
        "start": "start-storybook -p 6006 -s public",
        "build": "yarn build-clean & yarn build-type & yarn build-bundle",
        "lint": "eslint --ext .tsx,ts src/ --fix",
        "build-type": "pnpify tsc  -p tsconfig.json --declaration --emitDeclarationOnly",
        "build-bundle": "node ./esbuild.config.js",
        "build-storybook": "build-storybook -s public",
        "build-clean": "rm -rf ./build",
        "pre-release": "yarn pack",
        "prepare": "husky install",
        "chromatic": "npx chromatic --project-token=CHROMATIC_PROJECT_TOKEN"
    },
    "dependencies": {
        "@emotion/react": "^11.10.5",
        "@emotion/styled": "^11.10.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@mdx-js/react": "^1.6.22",
        "@storybook/addon-actions": "^6.5.15",
        "@storybook/addon-docs": "^6.5.15",
        "@storybook/addon-essentials": "^6.5.15",
        "@storybook/addon-interactions": "^6.5.15",
        "@storybook/addon-links": "^6.5.15",
        "@storybook/builder-webpack5": "^6.5.15",
        "@storybook/manager-webpack5": "^6.5.15",
        "@storybook/node-logger": "^6.5.15",
        "@storybook/preset-create-react-app": "^4.1.2",
        "@storybook/react": "^6.5.15",
        "@storybook/testing-library": "^0.0.13",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.7.13",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.15",
        "@yarnpkg/pnpify": "^4.0.0-rc.34",
        "babel-plugin-named-exports-order": "^0.0.2",
        "esbuild": "^0.16.14",
        "eslint": "^8.31.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "latest",
        "eslint-plugin-storybook": "^0.6.8",
        "husky": "^8.0.2",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.1",
        "prop-types": "^15.8.1",
        "react-scripts": "^5.0.1",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "eslint --ext .tsx,.ts src/** --fix"
        ],
        "src/**": [
            "prettier --check 'src/**/*.(ts|tsx)'"
        ]
    },
    "files": [
        "./build"
    ],
    "publishConfig": {
        "access": "public"
    },
    "packageManager": "yarn@3.3.1"
}
